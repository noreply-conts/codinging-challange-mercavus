{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": false,
    "target": "esnext",
    "noEmit": true,
    "strict": true,
    "allowJs": false
  },
  "typeRoots": [
    "./@types",
    "./node_modules/@types"
  ]
}
